<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/linearDangxyly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageSP2"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/redmi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTensp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="tensp"
                android:textColor="#444444"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvGia2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="giasp"
                    android:textColor="#E53935"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvsoluong2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:text="soluong"
                    android:textSize="16dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvMau2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="10dp"
                android:text="mausp"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvtongtien2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="giá"
                android:textColor="#E53935"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnHuyDonHang"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Hủy đơn hàng" />
</LinearLayout>