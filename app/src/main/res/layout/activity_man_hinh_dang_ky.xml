<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="15dp"
    tools:context=".ManHinhDangKy">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Đăng ký tài khoản "
        android:textColor="#444444"
        android:textSize="35dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edUserNameDK"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Tên đăng nhập"
            android:padding="15dp"
            android:background="@drawable/khung_button"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edPasswordDK"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Mật khẩu"
            android:padding="15dp"
            android:background="@drawable/khung_button"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edRePasswordDK"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Nhập lại mật khẩu"
            android:padding="15dp"
            android:background="@drawable/khung_button"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnDangKyDK"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ĐĂNG Ký"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:background="@drawable/khung_button"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="#444444"/>

    <Button
        android:id="@+id/btnCancelDK"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="trở về"
        android:layout_marginBottom="10dp"
        android:textColor="#444444"
        android:background="@drawable/khung_button"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="#E5E7ED"/>
</LinearLayout>