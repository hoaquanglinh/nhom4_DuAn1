<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManHinhDangNhap"
    android:padding="15dp"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn trở lại với FastPhone"
        android:textColor="#444444"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="25dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edUserName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/khung_button"
            android:padding="15dp"
            android:hint="Tên đăng nhập"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:inputType="textPassword"
            android:background="@drawable/khung_button"
            android:maxLines="1"
            android:padding="15dp"
            android:hint="Mật khẩu"/>
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/chkRememberPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhớ tài khoản"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnDangNhap"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ĐĂNG NHẬP"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:background="@drawable/khung_button"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="#444444"/>

    <Button
        android:id="@+id/btnDangKy"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ĐĂNG KÝ"
        android:layout_marginBottom="10dp"
        android:textColor="#444444"
        android:background="@drawable/khung_button"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="#DDE1EA"/>
</LinearLayout>